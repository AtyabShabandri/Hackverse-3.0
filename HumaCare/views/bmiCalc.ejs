<body>
    

    <div class="container">
        <div class="screen">
            <div class="screen__content">



                <form class="login" oninput="x.value = parseInt(wi.value)/(parseInt(hi.value)*parseInt(hi.value)/10000)"  method="post" action="/bmiCalc">
                    <div class="login__field">
                        <i class="login__icon fa-solid fa-user"></i>
                        <input type="number" id="wi" name="weight" required autofocus class="login__input" placeholder="weight in kgs" autocomplete="off">
                    </div>
                    <div class="login__field">
                        <i class="login__icon fa-solid fa-lock"></i>
                        <input type="number"  id="hi" required autocomplete="off" name="height" class="login__input" placeholder="height in cms">
                    </div>
                    
                        <output name="x" for="hi wi"></output>

                    <!-- <button class="button login__submit" type="submit" name="caluclate">
